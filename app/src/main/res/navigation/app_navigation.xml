<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.smartelectronics.tvshow.ui.fragments.HomeFragment"
        android:label="@string/tv_show"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_tvShowDetailsFragment"
            app:destination="@id/tvShowDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowDetailsFragment"
        android:name="com.smartelectronics.tvshow.ui.fragments.TvShowDetailsFragment"
        android:label="@string/details" >
        <argument
            android:name="tvShowItem"
            app:argType="com.smartelectronics.tvshow.models.MostPopularTvShowItems" />
    </fragment>
</navigation>